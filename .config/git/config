[user]
    name = eemax
    email = 60387798+eemax@users.noreply.github.com

[credential]
    helper = manager

[pull]
    rebase = true

[push]
    default = simple

[rebase]
    autoStash = true
    autoSquash = true

[merge]
    conflictstyle = zdiff3

[fetch]
    prune = true

[commit]
    verbose = true

[alias]
    lg = log --graph --oneline --decorate --all --pretty=format:'%C(auto)%h %d %s %C(dim white)[%cr by %an]%C(reset)'
    sp = stash push -m
    ri = rebase -i
    au = add -u
    ds = diff --staged
    del1 = reset --hard HEAD~1
    unfuck = !git reset --hard HEAD && git clean -df
    please = push --force-with-lease
    amend = commit --amend --no-edit
    fixup = !git commit --fixup=$(git log --oneline | head -10 | fzf | cut -d' ' -f1)
    rebasenew = !git rebase -i $(git merge-base HEAD origin/main)
    branch-cleanup = !git branch --merged | grep -v main | xargs -n 1 git branch -d

[core]
    editor = code --wait
    pager = delta

[merge]
    tool = code
[mergetool "code"]
    cmd = code --wait --merge $BASE $LOCAL $REMOTE $MERGED

[delta]
    side-by-side = true

[interactive]
    diffFilter = delta --color-only
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
